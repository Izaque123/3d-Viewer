{
  "name": "odonto3d-backend",
  "version": "1.0.0",
  "description": "Backend do sistema Odonto3D - Visualização e planejamento odontológico com modelos 3D",
  "main": "dist/main.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "migration:run": "ts-node src/scripts/run-migrations.ts",
    "migration:revert": "ts-node src/scripts/revert-migration.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate src/database/migrations/Migration",
    "user:create": "ts-node src/scripts/create-user.ts",
    "user:fix-passwords": "ts-node src/scripts/fix-passwords.ts",
    "user:change-password": "ts-node src/scripts/change-password.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "typeorm": "^0.3.17",
    "reflect-metadata": "^0.1.13",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}

